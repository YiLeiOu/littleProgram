/* pages/mood/mood.wxss */

.app {
    width: 100%;
    height: 100%;
    position: relative;
    background: #FBFBFB;
}


.moodcard {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center; 
    /* background: lightblue; */
    
}
.moodcard>image {
    width: 100%;
}


.headMessage {
    width: 100%;
    height: 130rpx;
    display: flex;
    flex-direction: row;
    border-bottom: 4rpx solid #EDEDED;
    border-top: 4rpx solid #EDEDED;
    background: #ffffff; 
}
.headMessage .headText {
    display: flex;
    width: 180rpx;
    height: 100%;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    /* background: pink; */
}
.headMessage .headImage {
    display: flex;
    width: 130rpx;
    height: 100%;
    align-items: center;
    justify-content: center;
    /* background: yellow; */
}
.headMessage .headImage>image {
    width: 80rpx;
    height: 80rpx;
}

.writeContent {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    margin: 6rpx 0rpx;
    border-bottom: 4rpx solid #EDEDED;
    border-top: 4rpx solid #EDEDED;
    background: #ffffff; 
}
.writeContent .contentText {
    display: flex;
    width: 180rpx;
    height: 100%;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    /* background: yellow; */
}
.writeContent>input {
    display: flex;
    width: 570rpx;
    height: 100%;    
    align-items: center; 
    font-size: 28rpx;
    /* background: pink; */
}


.signature,.date {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100rpx;
    border-bottom: 4rpx solid #EDEDED;
    border-top: 4rpx solid #EDEDED;
    background: #ffffff; 
    margin: 6rpx 0rpx;
}
.signature .nameText,.date .dateText {
     display: flex;
     width: 122rpx;
     height: 100%;
     font-size: 30rpx;
     align-items: center;
     justify-content: center;
}
.signature .nameInput,.date .dateShow {
    display: flex;
    width: 628rpx;
    height: 100%;
    align-items: center;
    font-size: 28rpx;
} 
.date {
    margin-bottom: 120rpx;
}


.choice {
    width: 100%;
    height: 90rpx;
    background: pink;
    position: fixed;
    bottom: 0rpx;
    z-index: 1000;
    border-top: 2rpx solid #EDEDED;
}
.goHome,.goDraw {
    position: absolute;
    width: 50%;
    height: 100%;
    border-radius: 0rpx; 
    line-height: 90rpx; 
}
.goHome {
    background-color: #ffffff;
}
.goDraw {
    left: 50%;
    background-color: #19AD19;
    color: #ffffff;
}
button::after {
    border: 0rpx;
}
