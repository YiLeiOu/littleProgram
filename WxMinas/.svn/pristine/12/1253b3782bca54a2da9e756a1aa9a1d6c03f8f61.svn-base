/* pages/mind-test-page/mind-test-page.wxss */
page{
    height: 100%;
}

.wrap{
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.testWrap{
    width: 100%;
    height: 100%;
   
}

.bgImg{
    width: 100%;
}

.test{
    position: absolute;
    top: 42%;
    left: 6.5%;
    padding: 20rpx;
    width: 80%;
    border: 6rpx solid #483b69;
    box-shadow:0px 0px 6px 6px rgba(72,59,105,0.7);
    border-radius: 20rpx;
    background-color:rgba(33,16,71,0.85);
    color: #fff;
}

.quetion{
    padding: 15rpx 0;
    width: 100%;
    line-height: 70rpx;
    border-bottom: 1rpx solid #060e3b;
}

.option{
    padding: 20rpx 0;
}

.radio{
    display: block;
    padding: 20rpx;
    line-height: 40rpx;
}

.alertCanvas{
    display: flex;
    flex-flow: column;
    justify-content: center;
    align-items: center;
    width: 100%;
}

.preImg{
    width: 100%;
}
.preImg image{
    display: block;
    margin: 0 auto;
    width: 75%;
}

.btn{
    margin: 0 auto;
    width: 90%;
    position: fixed;
    left: 5%;
    bottom: 0;
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
}

.share,
.saveImg{
    flex: 1;
    line-height: 100rpx;
    font-size: 32rpx;
    text-align: center;
}

.share{
  margin-right: 10rpx;
}

.saveImg{
    margin-left: 10rpx;
    color: #fff;
    background: #b6ac56;
}

.myCanvas{
  position: fixed;
  top: -4000px;
}

