/* pages/love/love.wxss */
.body {
    width: 100%;
    /* height: 100%; */
    background-color: #F8F8F8;
} 

/*轮播区，选择性别卡:
暂时不做选择 */
.swiper {
    width: 100%; 
    height: 745rpx; 
}
.luckCard {
    width: 436rpx;
    height: 716rpx;
    border-radius: 15rpx;
    margin-left: calc(50% - 218rpx );
    margin-top: 13rpx; 
    box-shadow: 4rpx 4rpx 20rpx gray;
}

/* 更改个人信息 */
.changeHead {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 142rpx;
    margin-bottom: 5rpx;
    background-color: #fff;
    border-top: 4rpx solid #e5e5e5;
    border-bottom: 4rpx solid #e5e5e5;
}
.changeHead .headTitle {
    display: flex;
    width: 20%;
    height: 100%;
    font-size: 26rpx;
    text-align: center;
    line-height: 142rpx;
    padding-left: 38rpx;
}
.changeHead .headImg {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 80%; 
    /* background-color: yellow; */
}
.changeHead .headImg>view {
    display: flex;
    width: 142rpx;
    height: 142rpx;
    /* background-color: pink; */
}
.changeHead .headImg>view:nth-child(2) {
    line-height: 142rpx;
    justify-content: center;
    color: #C8C8CD;
}
 .changeHead .headImg image{
    display: block;
    margin: 26rpx 0rpx;
    width: 90rpx;
    height:90rpx;
} 

.changeName {
    width: 100%;
    height: 102rpx;
    margin-bottom: 24rpx;
    background-color: #fff;
    border-top: 4rpx solid #e5e5e5;
    border-bottom: 4rpx solid #e5e5e5; 
}
.changeName .nameTitle {
    float: left;
    width: 156rpx;
    height: 100%;
    text-align: center;
    line-height: 102rpx;
    font-size: 26rpx;
}
.changeName .rename {
    float: left;
    width: 595rpx;
    height: 100%;
    font-size: 30rpx;
    /* background: skyblue; */
}

/*首页 或 生成图片  */
.choice {
    position: fixed;
    z-index: 2;
    width: 100%;
    height: 88rpx;
    bottom: 0rpx;
    background-color: #fff;
}
.home,.make{
    float: left;
    width: 50%;
    height: 88rpx;
    font-size: 32rpx;
    text-align: center;
    line-height: 88rpx;
    background-color: #fff;
    border-top: 4rpx solid #e5e5e5;
}
.make {
    background-color: #19AD19;
    color: #fff;
}

