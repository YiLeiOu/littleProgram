//index.js
//获取应用实例
const app = getApp()

Page({
  data: {
    // 小工具相关数据
    toolTitle: [
      '小装X',
      '做个头像',
      '心理测试'
    ],
    toolIconUrl: [
      '/images/icon/bi.png',
      '/images/icon/makeHeadPic.png',
      '/images/icon/mindTest.png'
    ],
    toolColor: [
      // 顺序： 背景色-------标题色------介绍文字色
      ['#f2fcf1', '#6f9838', '#85c861'],
      ['#faeff3', '#e74f80', '#f4b3c9'],
      ['#e9fdfb', '#2cb28f', '#a5e0dc'],
    ],
    // 工具介绍文本
    zhuangBi: '天将降大任于斯人也，必先苦其心智',
    mekaHeadPic: '劳其筋骨，饿其体肤',
    mindTest: '行拂空乏其身',


    motto: 'Hello World',
    userInfo: {},
    hasUserInfo: false,
    canIUse: wx.canIUse('button.open-type.getUserInfo'),

    imgUrls: [
      '/images/marriage-bg.jpg',
      'http://img02.tooopen.com/images/20150928/tooopen_sy_143912755726.jpg',
      'http://img06.tooopen.com/images/20160818/tooopen_sy_175866434296.jpg',
      'http://img06.tooopen.com/images/20160818/tooopen_sy_175833047715.jpg'   
    ],
    
    introduceText: 'sdffdsfsdfsdsdfssdfs',

    indicatorDots: true,
    autoplay: true,
    interval: 3000,
    duration: 1000

  },
  //事件处理函数
  bindViewTap: function() {
    wx.navigateTo({
      url: '../marry/marry'
    })
  },
  zhuangBi: function () {
    wx.navigateTo({
      url: '../marry/marry'
    })
  },
  lucky: function () {
    wx.navigateTo({
      url: '../luck/luck'
    })
  }, 

  onLoad: function () {
    if (app.globalData.userInfo) {
      this.setData({
        userInfo: app.globalData.userInfo,
        hasUserInfo: true
      })
    } else if (this.data.canIUse){
      // 由于 getUserInfo 是网络请求，可能会在 Page.onLoad 之后才返回
      // 所以此处加入 callback 以防止这种情况
      app.userInfoReadyCallback = res => {
        this.setData({
          userInfo: res.userInfo,
          hasUserInfo: true
        })
      }
    } else {
      // 在没有 open-type=getUserInfo 版本的兼容处理
      wx.getUserInfo({
        success: res => {
          app.globalData.userInfo = res.userInfo
          this.setData({
            userInfo: res.userInfo,
            hasUserInfo: true
          })
        }
      })
    }
  },
  getUserInfo: function(e) {
    console.log(e)
    app.globalData.userInfo = e.detail.userInfo
    this.setData({
      userInfo: e.detail.userInfo,
      hasUserInfo: true
    })
  }
})
